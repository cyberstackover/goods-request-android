<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorAccent"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/row_featured_item_iv_item"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/row_featured_item_tv_name"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/textColorThird"/>

    <TextView
        android:id="@+id/row_featured_item_tv_location"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_below="@id/row_featured_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/textColorThird"/>

    <TextView
        android:id="@+id/row_featured_item_tv_price"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_below="@id/row_featured_item_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorThird"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/row_featured_item_btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="View"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>