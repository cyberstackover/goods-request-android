<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/row_featured_item_iv_item"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/row_seller_main_tv_origin"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/row_seller_main_tv_destination"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/row_seller_main_tv_from_date"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/row_seller_main_tv_to_date"
        android:layout_toRightOf="@id/row_featured_item_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>