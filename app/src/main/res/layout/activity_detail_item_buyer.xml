<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_detail_item_buyer_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/item_1"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miniatur Eiffel"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorThird"
            android:text="Miniatur Eiffel adalah salah satu miniatur paling populer dari Paris. Miniatur Eiffel memiliki tinggi 50cm, panjang 10 cm, dan lebar 10 cm. Miniatur ini terbuat dari besi, tahan air, dan anti karat." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 200.000"
            android:textColor="@color/textColorThird" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Seller"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mrluthfianto"
            android:textColor="@color/textColorThird"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_detail_item_buyer_btn_buy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Buy"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>