<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_detail_request_seller_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Figure Superman"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorThird"
            android:text="Action Figure Superman adalah action figure dengan tinggi 5 cm dan diameter 3 cm. Memiliki warna merah yang menjadi ciri khas jubah Superman dan saat ini hanya bisa dibeli di Johannesburg." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 100.000 - Rp 200.000"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quantity"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Requester"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColorThird"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mrluthfianto"
            android:textColor="@color/textColorThird"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_detail_request_seller_btn_accept"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Accept"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_detail_request_seller_btn_reject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:background="#D91E18"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>